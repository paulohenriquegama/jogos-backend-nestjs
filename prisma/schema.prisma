// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  surname  String
  email    String @unique
  password String @map("passwords")
  cpf      String @unique
  admin    Boolean @default(false)

  profiles Profile[]

  games Game[]
}

model Profile {
  id    Int     @id @default(autoincrement())
  title String  @unique
  image String?

  user   User @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId Int
}

model Game {
  id          Int     @id @default(autoincrement())
  title       String  @unique
  capa        String
  description String?
  year        String
  note        String
  trailer     String
  gameplay    String
  favorite    Boolean @default(false)

  users User[]

  genres Genre[]
}

model Genre {
  id   Int    @id @default(autoincrement())
  name String @unique

  games Game[]

}
